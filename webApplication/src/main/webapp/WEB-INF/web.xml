<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <security-constraint>
    <display-name>studentResource</display-name>
    <web-resource-collection>
      <web-resource-name>studentResource</web-resource-name>
      <url-pattern>/student/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>student</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>adminResource</display-name>
    <web-resource-collection>
      <web-resource-name>adminResource</web-resource-name>
      <url-pattern>/Admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <login-config>
    <!--  auth-method>BASIC</auth-method> -->
    <auth-method>FORM</auth-method>
          <realm-name>exampleDbRealm</realm-name>
		<form-login-config>
			<form-login-page>/login.jsp</form-login-page>
			<form-error-page>/FormLoginerrorPage.jsp</form-error-page>
		</form-login-config>
  </login-config>
  <security-role>
    <role-name>student</role-name>
  </security-role>
  <security-role>
    <role-name>admin</role-name>
  </security-role>
  <servlet>
    <description></description>
    <display-name>servletDemo</display-name>
    <servlet-name>servletDemo</servlet-name>
    <servlet-class>com.library.student.servletDemo</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servletDemo</servlet-name>
    <url-pattern>/servletDemo</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>ReturnBookservlet</display-name>
    <servlet-name>ReturnBookservlet</servlet-name>
    <servlet-class>com.library.student.ReturnBook</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ReturnBookservlet</servlet-name>
    <url-pattern>/ReturnBook</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AddNewBook</display-name>
    <servlet-name>AddNewBook</servlet-name>
    <servlet-class>com.library.admin.AddNewBook</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddNewBook</servlet-name>
    <url-pattern>/AddNewBook</url-pattern>
  </servlet-mapping>
  <servlet>
    <description></description>
    <display-name>AdminUpdateBookDetails</display-name>
    <servlet-name>AdminUpdateBookDetails</servlet-name>
    <servlet-class>com.library.admin.AdminUpdateBookDetails</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminUpdateBookDetails</servlet-name>
    <url-pattern>/update</url-pattern>
  </servlet-mapping>
